<?xml version="1.0"?>
<root>
  <devicevendordef>
    <vendorname>HENG_YU_TECHNOLOGY</vendorname>
    <vendorid>0x0f39</vendorid>
  </devicevendordef>

  <deviceproductdef>
    <productname>POKER_PRO_S</productname>
    <productid>0x0611</productid>
  </deviceproductdef>

  <inputsourcedef>
    <name>LANG_US</name>
    <inputsourceid_prefix>com.apple.keylayout.US</inputsourceid_prefix>
  </inputsourcedef>

  <item>
    <name>NumLock to Delete</name>
    <identifier>private.numlock_to_del</identifier>
    <autogen>__KeyToKey__ KeyCode::PC_KEYPAD_NUMLOCK, KeyCode::PC_DEL</autogen>
  </item>

  <item>
    <name>NumPad Media Keys</name>
    <identifier>private.numpad_media_keys</identifier>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_MINUS, KeyCode::VK_CONSUMERKEY_VOLUME_DOWN</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_PLUS, KeyCode::VK_CONSUMERKEY_VOLUME_UP</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_MULTIPLY, KeyCode::VK_CONSUMERKEY_MUSIC_PLAY</autogen>
    <!--
    <autogen>__KeyToKey__ KeyCode::KEYPAD_MULTIPLY, KeyCode::VK_CONSUMERKEY_VOLUME_MUTE</autogen>
    <autogen>__KeyToKey__ KeyCode::ENTER, KeyCode::VK_CONSUMERKEY_MUSIC_PLAY</autogen>
    -->
    <autogen>__KeyToKey__ KeyCode::KEYPAD_EQUAL, KeyCode::VK_CONSUMERKEY_MUSIC_PREV</autogen>
    <autogen>__KeyToKey__ KeyCode::KEYPAD_SLASH, KeyCode::VK_CONSUMERKEY_MUSIC_NEXT</autogen>
  </item>

  <item>
    <name>Switch Swedish Section(ยง) with Less-Than(&lt;) (usefull with Pocker 2)</name>
    <identifier>private.swedish_section_to_less_than</identifier>
    <autogen>--KeyToKey-- KeyCode::SWEDISH_SECTION, KeyCode::SWEDISH_LESS_THAN</autogen>
    <autogen>--KeyToKey-- KeyCode::SWEDISH_LESS_THAN, KeyCode::SWEDISH_SECTION</autogen>
  </item>

  <item>
    <name>Emulate ANSI for ISO keyboards</name>
    <identifier>private.ansi_for_iso</identifier>
    <autogen>--KeyToKey-- KeyCode::RETURN, KeyCode::BACKSLASH</autogen>
    <autogen>--KeyToKey-- KeyCode::BACKSLASH, KeyCode::RETURN</autogen>
    <autogen>--KeyToKey-- KeyCode::SWEDISH_SECTION, KeyCode::SHIFT_L</autogen>
  </item>

  <item>
    <name>Emulate HHKB2 for Poker Pro S</name>
    <identifier>private.poker2_emu_hhkb2</identifier>
    <device_only>DeviceVendor::HENG_YU_TECHNOLOGY, DeviceProduct::POKER_PRO_S</device_only>

    <autogen>__KeyToKey__ KeyCode::ENTER, KeyCode::FORWARD_DELETE</autogen>
    <autogen>__KeyToKey__ KeyCode::RETURN, KeyCode::DELETE</autogen>
    <autogen>__KeyToKey__ KeyCode::DELETE, KeyCode::BACKSLASH</autogen>
    <autogen>__KeyToKey__ KeyCode::FORWARD_DELETE, KeyCode::BACKQUOTE</autogen>
    <autogen>__KeyToKey__ KeyCode::BACKSLASH, KeyCode::RETURN</autogen>

    <autogen>__KeyToKey__ KeyCode::BACKQUOTE, KeyCode::SHIFT_L</autogen>
    <autogen>__KeyToKey__ KeyCode::RawValue::0x0a, KeyCode::SHIFT_L</autogen>

    <!-- Disable Control -->
    <autogen>__KeyToKey__ KeyCode::COMMAND_R, KeyCode::CONTROL_L</autogen>
    <autogen>__KeyToKey__ KeyCode::CONTROL_R, KeyCode::VK_NONE</autogen>
    <autogen>__KeyToKey__ KeyCode::CONTROL_L, KeyCode::VK_NONE</autogen>
  </item>

  <item>
    <name>Swap left Option with left Command only for Poker Pro S</name>
    <identifier>private.swap_opt_l_cmd_l_for_poker2</identifier>
    <device_only>DeviceVendor::HENG_YU_TECHNOLOGY, DeviceProduct::POKER_PRO_S</device_only>
    <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::OPTION_L</autogen>
    <autogen>__KeyToKey__ KeyCode::OPTION_L, KeyCode::COMMAND_L</autogen>
  </item>
</root>
