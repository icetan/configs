# Lock screen
#dm-tool lock
set $lock ~/.local/bin/i3lock-nitrogen
bindsym $mod+9 exec $lock

# Set shut down, restart and lock
set $mode_system "(r)eboot, (s)hutdown, (t)erminal"
mode $mode_system {
    bindsym XF86PowerOff exec --no-startup-id $lock, mode "default"
#    bindsym s exec --no-startup-id i3exit suspend, mode "default"
#    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
#    bindsym e exec --no-startup-id i3exit logout, mode "default"
#    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id reboot, mode "default"
    bindsym s exec --no-startup-id shutdown, mode "default"
    bindsym t exec i3-sensible-terminal, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym XF86PowerOff mode $mode_system

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 100 px or 100 ppt
        bindsym j resize grow height 100 px or 100 ppt
        bindsym k resize shrink height 100 px or 100 ppt
        bindsym l resize grow width 100 px or 100 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym c move position center

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Media keys
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set  10%-
bindsym XF86MonBrightnessUp   exec --no-startup-id brightnessctl set +10%
bindsym XF86AudioMute         exec --no-startup-id amixer -q set Master mute
bindsym XF86AudioLowerVolume  exec --no-startup-id amixer -q set Master 3%- unmute
bindsym XF86AudioRaiseVolume  exec --no-startup-id amixer -q set Master 3%+ unmute
