# Start i3bar to display a workspace bar (plus the system information i3status if available)
bar {
    mode hide
    position top
    #status_command i3status
    status_command i3status-rs ~/.config/i3/status.toml
    # wheel_up_cmd nop
    # wheel_down_cmd nop
    font pango:Droid Sans, Icons 9
    #font pango:DejaVu Sans Mono, FontAwesome 9
    colors {
        separator #93A1A1
        background #004557
        statusline #839496
        focused_workspace #93A1A1 #839496 #002B36
        active_workspace #002B36 #A4A28D #93A1A1
        inactive_workspace #A4A28D #002B36 #839496
        urgent_workspace #93A1A1 #900000 #93A1A1
    }
}

